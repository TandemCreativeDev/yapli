generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chatroom {
  id        String    @id @default(uuid())
  title     String
  createdAt DateTime  @default(now())
  messages  Message[]

  @@map("chatrooms")
}

model Message {
  id         String   @id @default(uuid())
  chatroomId String
  alias      String
  message    String
  timestamp  DateTime @default(now())

  chatroom Chatroom @relation(fields: [chatroomId], references: [id])

  @@map("messages")
}
